@page
@model IndexModel

@{
    ViewData["Title"] = "Profile";
}

<div class="login-center-box">
    <div class="row">
        <div class="col-md-6">
            <h1>Account Information</h1>
            <partial name="_StatusMessage" for="StatusMessage" />
            <br/>
            <form method="post">
                <!-- Existing information display here, possibly with input fields to edit -->
                <div class="mb-3">
                    <label asp-for="Username" class="form-label">Email</label>
                    <input asp-for="Username" class="form-control" disabled />
                </div>
                <div class="mb-3">
                    <label asp-for="Customer.FirstName" class="form-label">First Name</label>
                    <input asp-for="Customer.FirstName" class="form-control" />
                </div>
                <div class="mb-3">
                    <label asp-for="Customer.LastName" class="form-label">Last Name</label>
                    <input asp-for="Customer.LastName" class="form-control" />
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Customer.Gender" class="form-label">Gender</label>
                    <div class="radio-buttons">
                        <input asp-for="Customer.Gender" type="radio" id="gender_male" value="M" class="form-check-input" />
                        <label asp-for="Customer.Gender" class="form-check-label" for="gender_male">Male</label>
                        <input asp-for="Customer.Gender" type="radio" id="gender_female" value="F" class="form-check-input" />
                        <label asp-for="Customer.Gender" class="form-check-label" for="gender_female">Female</label>
                    </div>
                    <span class="text-danger"></span>
                </div>
                <br/>
                <div class="form-floating mb-3">
                    <label asp-for="Customer.BirthDate" class="form-label">Date of Birth</label>
                    <input asp-for="Customer.BirthDate" type="date" class="form-control" aria-required="true" />
                    <span class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Customer.CountryOfResidence" class="form-label">Country</label>
                    <input asp-for="Customer.CountryOfResidence" class="form-control" />
                </div>
                <div class="button-container">
                    <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Update Information</button>
                </div>
            </form>
            <br/>
            <div class="text-center">
                <a class="nav-link @ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext)" id="two-factor" asp-page="./TwoFactorAuthentication">Manage Two-factor Authentication</a>
            </div>
        </div>
        <!-- Right Column for Order History, wrapped in the same login-center-box class if needed -->
        <div class="col-md-6">
            <h3>Order History</h3>
            <table class="table">
                <thead>
                    <tr>
                        <th>Product Name</th>
                        <th>Order #</th>
                        <th>Price</th>
                        <th>Date</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Example hard-coded row -->
                    <tr>
                        <td>Ferrari F1 Racer 1:8</td>
                        <td>#AEJN513</td>
                        <td>$65.00</td>
                        <td>04/08/2024</td>
                    </tr>
                    <!-- Repeat for more orders or iterate over a collection -->
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}