<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AuroraBrix</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <header>
        <nav>
            <div class="left-nav">
                <div class="logo">
                    <h1>AuroraBrix</h1>
                </div>
                <ul>
                    <li><a href="/">Home</a></li>
                    <li><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="About">About Us</a></li>
                    <li><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="OrderHistory">Order History</a></li>
                    <li><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Cart">Cart</a></li>

                    <li><a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Customers">Customers</a></li>  <!-- Needs Role Authenticity -->   
                </ul>
            </div>
            <div class="right-nav">
                <div class="search-bar">
                    <input type="text" class="search-input" placeholder="Search items..." />
                </div>
                <ul>
                    <partial name="_LoginPartial" />
                </ul>
            </div>

        </nav>
    </header>

    <main>
        @RenderBody()
    </main>

    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", required: false)
    <script src="~/js/cart.js"></script>

</body>
</html>