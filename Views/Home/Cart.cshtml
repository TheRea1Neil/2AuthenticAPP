@model IEnumerable<_2AuthenticAPP.Models.ViewModels.CartItemViewModel>

@{
    ViewData["Title"] = "Cart";
}

<div class="container">
    <h2>Your Cart</h2>

    @if (Model.Count() == 0)
    {
        <p>Your cart is empty.</p>
    }
    else
    {
        <div class="cart-items">
            @foreach (var item in Model)
            {
                <div class="cart-item">
                    <div class="item-image">
                        <img src="@item.ImgLink" alt="@item.Name">
                    </div>
                    <div class="item-details">
                        <h3>@item.Name</h3>
                        <p>Category: @item.Category</p>
                        <p>Pieces: @item.NumParts</p>
                        <p>Year: @item.Year</p>
                        <p>Primary Color: @item.PrimaryColor</p>
                        <p>Secondary Color: @item.SecondaryColor</p>
                    </div>
                    <div class="item-actions">
                        <span class="price">@item.Price.Value.ToString("C")</span>
                        <button class="btn-remove" data-product-id="@item.ProductId" onclick="removeFromCart(@item.ProductId)">Remove</button>
                        <div class="quantity">
                            <button class="btn-decrease-qty" data-product-id="@item.ProductId" onclick="decreaseQuantity(@item.ProductId)">-</button>
                            <span class="qty">@item.Qty</span>
                            <button class="btn-increase-qty" data-product-id="@item.ProductId" onclick="increaseQuantity(@item.ProductId)">+</button>
                        </div>
                    </div>
                </div>
            }
            <br /><br />
            <div class="cart-actions">
                <a href="@Url.Action("Checkout", "Home")" class="btn btn-primary">Continue to Payment</a>
            </div>
        </div>
    }
</div>