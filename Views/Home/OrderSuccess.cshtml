@{
    ViewData["Title"] = "Order Success";
}


@* If the prediction appears to be a Valid transaction *@
@if (ViewBag.Prediction == "Valid")
{
    <h2>Order Success</h2>
    <div class="container">
        <p>Thank you for your purchase! Your order has been successfully placed.</p>
        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Continue Shopping</a>
    </div>


}
else @* If the prediction appears to be a Suspicious transaction *@
{
        <h2>Order Received</h2>
        <div class="container">
            <p>Order Summitted. Your order will be reviewed by our specialist.</p>
            <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Continue Shopping</a>
        </div>
}


