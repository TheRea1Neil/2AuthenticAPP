@{
    ViewData["Title"] = "Order Success";
}

@* This is the pop-up if the transaction is not flagged as fraud *@
<div class="container">
    <h2>Order Success</h2>
    <p>Thank you for your purchase! Your order has been successfully placed.</p>
    <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Continue Shopping</a>
</div>

@* This is the pop-up if the transaction is flagged as fraud *@
<div class="container">
    <h2>Order Received</h2>
    <p>Thank you for your purchase! Your order will be reviewed by our team.</p>
    <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Continue Shopping</a>
</div>