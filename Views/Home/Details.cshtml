@model _2AuthenticAPP.Models.ProductViewModel

@{
    ViewData["Title"] = "Product Details: " + Model.Name;
}

<div class="product-details-container">
    <a class="back-link" href="javascript:history.back()">&#60; Back</a>

    <div class="product-details-card">
        <header class="product-header">
            <h2 class="product-title">@Model.Name</h2>
            <div class="product-meta">
                <div class="product-rating">
                    <span class="rating-value">@Model.AverageRating?.ToString("0.0")</span>
                    <span class="star">&#9733;</span>
                </div>
                <div class="product-price">
                    <span class="price-value">@Model.Price?.ToString("C")</span>
                </div>
            </div>
        </header>

        <div class="product-content">
            <section class="product-specs">
                <div class="spec">
                    <span class="spec-title">Pieces:</span>
                    <span>@Model.NumParts</span>
                </div>
                <div class="spec">
                    <span class="spec-title">Year:</span>
                    <span>@Model.Year</span>
                </div>
                <div class="spec">
                    <span class="spec-title">Category:</span>
                    <span>@Model.Category</span>
                </div>
                <div class="spec">
                    <span class="spec-title">Primary Color:</span>
                    <span>@Model.PrimaryColor</span>
                </div>
                <div class="spec">
                    <span class="spec-title">Secondary Color:</span>
                    <span>@Model.SecondaryColor</span>
                </div>
            </section>

            <div class="product-description">
                <p>@Model.Description</p>
            </div>

            <div class="product-actions">
                <form asp-controller="Home" asp-action="AddToCart" method="post">
                    <input type="hidden" name="productId" value="@Model.ProductId" />
                    <button type="submit" class="btn btn-add-to-cart">Add to Cart</button>
                </form>

                @if (User.IsInRole("Admin"))
                {
                    <a asp-action="UpdateProduct" asp-route-id="@Model.ProductId" class="btn btn-primary">Update</a>
                    <a asp-action="DeleteProduct" asp-route-id="@Model.ProductId" class="btn btn-danger">Delete</a>
                }

            </div>
        </div>

        <div class="product-image">
            <img src="@Model.ImgLink" alt="Image of @Model.Name">
        </div>
    </div>
</div>

