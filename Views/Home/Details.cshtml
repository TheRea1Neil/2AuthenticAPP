@model int

@{
    ViewData["Title"] = "Product Details";
}

<div class="container">
    <div class="product-details">
        <div class="product-header">
            <div class="back-link">
                <a href="/">&#8592;</a>
            </div>
            <div class="product-title">
                <h2>Ferrari F1 Racer 1:8</h2>
                <div class="rating">
                    <span>4</span>
                    <span>&#9733;</span>
                </div>
            </div>
        </div>
        <div class="product-details-card">
            <div class="product-content">
                <div class="product-image">
                    <img src="~/images/product1.jpg" alt="Ferrari F1 Racer 1:8">
                </div>
                <div class="product-specs">
                    <div class="price">
                        <span>$65.00</span>
                    </div>
                    <div class="spec-item">
                        <span>Pieces:</span>
                        <span>1245</span>
                    </div>
                    <div class="spec-item">
                        <span>Year:</span>
                        <span>2006</span>
                    </div>
                    <div class="spec-item">
                        <span>Category:</span>
                        <span>Car-Vehicle</span>
                    </div>
                    <div class="spec-item">
                        <span>Primary Color:</span>
                        <span>Red</span>
                    </div>
                    <div class="spec-item">
                        <span>Secondary Color:</span>
                        <span>Black</span>
                    </div>
                    <div class="actions">
                        <button class="btn btn-add-to-cart">Add to Cart</button>
                        <button class="btn btn-add-to-wishlist">Add to Wish List</button>
                    </div>
                </div>
            </div>
            <div class="product-description">
                <p>At 19 inches, almost 1,000 pieces, this is the biggest official Ferrari F1 racer ever built with LEGO bricks! Incredible real-world features include a removable front spoiler and tires that really steer. Packed with realistic Ferrari details! Working steering system turns front spoiler to removable Measures 20" (52cm) long and 7" (8cm) wide! Time required: 7 hours!</p>
            </div>
        </div>
    </div>
</div>