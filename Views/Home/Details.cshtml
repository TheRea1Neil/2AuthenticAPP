@model _2AuthenticAPP.Models.ProductViewModel

@{
    ViewData["Title"] = "Product Details: " + Model.Name;
}

<div class="product-details-container">
    <div class="back-link">
        <a href="javascript:history.back()">&#60; Back</a>
    </div>
    <div class="product-details-card">
        <div class="product-header">
            <h2 class="product-title">@Model.Name</h2>
            <div class="product-price-rating">
                <div class="rating">
                    <span>@Model.AverageRating?.ToString("0.0")</span>
                    <span class="star">&#9733;</span>
                </div>
                <div class="price">
                    <span class="price-value">@Model.Price?.ToString("C")</span>
                </div>
            </div>
        </div>
        <div class="product-main-content">
            <div class="product-specs">
                <div class="spec-item">
                    <span class="spec-title">Pieces:</span>
                    <span class="spec-detail">@Model.NumParts</span>
                </div>
                <div class="spec-item">
                    <span class="spec-title">Year:</span>
                    <span class="spec-detail">@Model.Year</span>
                </div>
                <div class="spec-item">
                    <span class="spec-title">Category:</span>
                    <span class="spec-detail">@Model.Category</span>
                </div>
                <div class="spec-item">
                    <span class="spec-title">Primary Color:</span>
                    <span class="spec-detail">@Model.PrimaryColor</span>
                </div>
                <div class="spec-item">
                    <span class="spec-title">Secondary Color:</span>
                    <span class="spec-detail">@Model.SecondaryColor</span>
                </div>
            </div>
            <div class="product-description">
                <p>@Model.Description</p>
            </div>
            <div class="actions">
                <form asp-controller="Home" asp-action="AddToCart" method="post">
                    <input type="hidden" name="productId" value="@Model.ProductId" />
                    <button type="submit" class="btn btn-add-to-cart">Add to Cart</button>
                </form>
                <a asp-action="UpdateProduct" asp-route-id="@Model.ProductId" class="btn btn-primary">Update</a>
                <a asp-action="DeleteProduct" asp-route-id="@Model.ProductId" class="btn btn-danger">Delete</a>
            </div>
        </div>
        <div class="product-image">
            <img src="@Model.ImgLink" alt="@Model.Name">
        </div>
    </div>
</div>
